# Database Configuration (Neon DB)
DATABASE_URL=postgresql://username:password@ep-hostname.us-east-2.aws.neon.tech/neondb?sslmode=require

# Google Services
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Email Configuration (Optional)
GMAIL_APP_PASSWORD=your_gmail_app_password
SMTP_USER=your_email@gmail.com

# Security
SESSION_SECRET=your_random_session_secret_minimum_32_characters
JWT_SECRET=your_jwt_secret_32_character_string

# Deployment
NODE_ENV=production
PORT=5000

# Railway Configuration
RAILWAY_STATIC_URL=your-app-name.railway.app
GOOGLE_REDIRECT_URI=https://your-app-name.railway.app/auth/gmail/callback